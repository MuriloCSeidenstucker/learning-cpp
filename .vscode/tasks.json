{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",              // O compilador que você deseja usar (g++)
            "args": [
                "-g",                      // Gera informações de depuração
                "D:/Projects/LearningCPP/src/*.cpp",  // O arquivo principal que será compilado
                "-o",                      // Nome do arquivo de saída (executável)
                "D:/Projects/LearningCPP/bin/emulator.exe"  // Caminho de saída do executável
            ],
            "group": {
                "kind": "build",           // Define como uma tarefa de compilação
                "isDefault": true          // Define essa tarefa como padrão
            },
            "problemMatcher": ["$gcc"]     // Ajuda a capturar e mostrar erros do compilador
        }
    ]
}
